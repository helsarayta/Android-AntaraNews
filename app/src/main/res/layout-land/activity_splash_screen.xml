<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashScreen">

    <ImageView
            android:id="@+id/sc_head_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/antaranews"
    />

    <TextView
            android:id="@+id/tv_desc_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/berita_terkini_dan_terpercaya_indonesia"
            android:layout_below="@+id/sc_head_img"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/abril_fatface"/>


    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/splash_img"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/tv_desc_splash"
            android:layout_centerHorizontal="true"
            app:lottie_fileName="news.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
    />


</RelativeLayout>
